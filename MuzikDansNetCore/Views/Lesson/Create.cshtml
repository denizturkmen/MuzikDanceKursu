@model LessonModel
@{
    ViewData["Title"] = "Create";
}

@section Validate
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor")
    </script>
}
<div class="container pt-100 mb-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Create Lesson</h1>
            <hr />
            <form asp-controller="Lesson" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="LessonName" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <input asp-for="LessonName" class="form-control" value="" />
                        <span asp-validation-for="LessonName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Images" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Images" class="form-control" value="" />
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                </div>

                @*<div class="form-group row">
                        <label asp-for="Images" class="col-md-2 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Images" name="Images" type="file"/>
                            <span asp-validation-for="Images" class="text-danger"></span>
                        </div>
                    </div>*@

                <div class="form-group row">
                    <label asp-for="Description" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <textarea id="editor" asp-for="Description" class="form-control">
                        value="@Model.Description"
                    </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-8 offset-2">
                        <button type="submit" class="btn btn-primary">Kaydet</button> |
                        <a asp-controller="Lesson" asp-action="LessonList" class="btn btn-primary">Listeye Geri Dön</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

