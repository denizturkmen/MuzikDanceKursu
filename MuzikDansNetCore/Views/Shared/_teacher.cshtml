@model Teacher

<div class="col-md-3">
    <div class="card text-center mb-3" style="border:none">
        <div class="card-block">
            <img src="~/images/@Model.Image" class="img-fluid rounded-circle my-4" style="width:250px;height:250px">
            <h3>@Model.TeacherName</h3>
            <h5 class="text-muted">@Model.Education</h5>
            <p>@Model.Description</p>

            <div class="d-flex flex-row justify-content-center">

                <div class="p-4">
                    <a href="http://@Model.FacebookAdress"><i class="fab fa-facebook fa-2x mr-1"></i> </a>
                </div>

                <div class="p-4">
                    <a href=""http://@Model.TwitterAdress"><i class="fab fa-twitter fa-2x mr-1"></i> </a>
                </div>

                <div class="p-4">
                    <a href=""http://@Model.InstagramAdress"><i class="fab fa-instagram fa-2x mr-1"></i> </a>
                </div>
            </div>
        </div>
    </div>
</div>

