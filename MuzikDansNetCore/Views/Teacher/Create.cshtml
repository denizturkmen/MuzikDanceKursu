@model MuzikDansNetCore.Models.Teacher.TeacherModel

@{
    ViewData["Title"] = "Create";
}

@section Validate
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="container pt-100 mb-5">
    <div class="row">
        <div class="col-md-8">
            <h4>Create Teacher</h4>
            <hr />
            <form asp-controller="Teacher" asp-action="Create" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group row">
                    <label asp-for="TeacherName" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="TeacherName" class="form-control" />
                        <span asp-validation-for="TeacherName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Education" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Education" class="form-control" />
                        <span asp-validation-for="Education"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Image" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="BranchId" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
                        <span asp-validation-for="BranchId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-9 offset-3">
                        <button class="btn btn-primary">Kaydet</button> |
                        <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Listeye Dön</a>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
