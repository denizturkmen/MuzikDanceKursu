@model TeacherModel
@{
    ViewData["Title"] = "Create";
}

@section Validate
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="container pt-100 mb-5">
    <div class="row">
        <div class="col-md-10">
            <h1>Create Teacher</h1>
            <hr />

            <form asp-controller="Teacher" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="TeacherName" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <input asp-for="TeacherName" class="form-control" value="" />
                        <span asp-validation-for="TeacherName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Image" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="hidden" name="Image" value="" />
                        <input type="file" name="file" value="" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Education" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Education" class="form-control" value="" />
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="BranchId" class="col-md-2 col-form-label"></label>
                    <div class="col-md-8">
                        <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId">
                            <option value="Secim Yapiniz">Secim Yapiniz</option>
                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-8 offset-2">
                        <button class="btn btn-primary">Kaydet</button>
                        <a asp-controller="Teacher" asp-action="TeacherList" class="btn btn-primary">Listeye Geri Dön</a>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>


