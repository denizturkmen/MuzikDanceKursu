@model TeacherListModel
@{
    ViewData["Title"] = "TeacherList";
}



<div class="container pt-100 mb-5">
    <div class="row">
        <div class="col-md-12">
            <h1>TeacherList</h1>
            <hr />
            <p>
                <a asp-controller="Teacher" asp-action="Create" class="btn btn-outline-primary">Create Teacher</a>
            </p>
           
            <table class="table table-striped table-hover table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Teacher Name</th>
                    <th>Teacher Education</th>
                    <th style="width: 180px"></th>  
                </tr>
                </thead>
                <tbody>
                   @foreach (var teacher in Model.Teachers)
                   {
                    <tr>
                        <td>@teacher.TeacherId</td>
                        <td>
                            <img src="~/images/@teacher.Image" alt="@teacher.TeacherName" width="50"/>
                        </td>
                        <td>@teacher.TeacherName</td>
                        <td>@teacher.Education</td>
                        <td>
                            <a href="/teacher/edit/@teacher.TeacherId" class="btn btn-primary btn-sm">Update</a> |
                            <form action="/teacher/delete/@teacher.TeacherId" method="post" style="display: inline">
                                <input type="hidden" name="Id" value="@teacher.TeacherId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                           
                        </td>
                    </tr>
                   }
                </tbody>

            </table>
            

        </div>
    </div>
</div>

