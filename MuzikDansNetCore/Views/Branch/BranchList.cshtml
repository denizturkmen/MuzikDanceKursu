@model BranchListModel
@{
    ViewData["Title"] = "BranchList";
}


<div class="container pt-100 mb-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Branch Listesi</h1>
            <hr />
            <p>
                <a asp-controller="Branch" asp-action="Create" class="btn btn-outline-primary">Create Branch</a>
            </p>
            <hr />
            @if (Model.Branches.Count > 0) { 
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Branch Name</th>
                        <th style="width: 180px"></th>  
                    </tr>
                </thead>
                <tbody>
                @foreach (var branch in Model.Branches)
                {
                    <tr>
                        <td>@branch.BranchId</td>
                        <td>@branch.BranchName</td>
                        <td>
                            <a href="/branch/update/@branch.BranchId" class="btn btn-primary btn-sm">Update</a> |
                            <form action="/branch/delete/@branch.BranchId" method="post" style="display: inline">
                                <a href="/branch/delete/@branch.BranchId" class="btn btn-danger btn-sm">Delete</a>
                            </form>
                        </td>
                    </tr>
                }
               
                </tbody>
            </table>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    Hiç Branch Yok!!!!
                </div>
            }

        </div>
    </div>
</div>

